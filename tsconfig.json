{
  "compilerOptions": {
    "module": "ESNext",
    "target": "ESNext",
    "esModuleInterop": true,
    "moduleResolution": "Node",
    "strict": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "baseUrl": "./", 
    "paths": {
      "@/*": ["src/*"]
    },
    "noEmitOnError": false,
    "outDir": "./dist",
  },
  "include": ["src/**/*.ts", "tests/**/*.ts", "./jest.setup.ts"]
}
